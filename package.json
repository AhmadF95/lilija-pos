{
  "name": "lilija-pos",
  "version": "1.1.0",
  "private": true,
  "description": "Simple Inventory & Sales desktop app (Arabic) packaged with Electron",
  "main": "main.js",
  "author": "You",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win nsis portable",
    "build:mac": "electron-builder --mac dmg",
    "build:linux": "electron-builder --linux AppImage deb",
    "build": "electron-builder -mwl",
    "scan": "node tools/selfcheck.js",
    "smoke:audit": "node tools/smoke_audit.js"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^24.0.0"
  },
  "build": {
    "appId": "com.ministore.desktop",
    "productName": "ليليجة",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}

